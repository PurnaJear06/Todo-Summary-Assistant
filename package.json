{
  "name": "todo-summary-assistant",
  "version": "1.0.0",
  "description": "A full-stack Todo application with AI-powered task summaries and Slack integration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "install-all": "npm install && npm run install-client",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint server.js",
    "clean": "rm -rf node_modules client/node_modules"
  },
  "keywords": [
    "todo",
    "task-management",
    "ai",
    "deepseek",
    "slack",
    "productivity",
    "react",
    "nodejs",
    "express"
  ],
